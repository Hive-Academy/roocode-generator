{
  "name": "roocode-generator",
  "version": "1.0.0",
  "description": "A CLI tool to generate RooCode workflow configuration files for any tech stack.",
  "main": "generate.js",
  "bin": {
    "roocode-generator": "bin/roocode-generator.js"
  },
  "scripts": {
    "start": "node bin/roocode-generator.js",
    "build": "tsc && copyfiles -u 1 templates/**/* dist/templates",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "eslint . --ext .js",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install",
    "dev": "npm run build && node bin/roocode-generator.js  --mode=roo"
  },
  "keywords": [
    "roocode",
    "workflow",
    "generator",
    "cli",
    "automation"
  ],
  "author": "Abdallah Khalil <abdallah@nghive.tech>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/roocode-generator.git"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.14.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.17",
    "@langchain/core": "^0.3.44",
    "@langchain/google-genai": "^0.2.3",
    "@langchain/openai": "^0.5.5",
    "chalk": "^5.4.1",
    "inquirer": "^12.5.2",
    "langchain": "^0.3.21",
    "ora": "^8.2.0"
  }
}
