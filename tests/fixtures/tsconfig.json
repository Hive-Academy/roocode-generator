{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler", // Explicitly set module resolution
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
